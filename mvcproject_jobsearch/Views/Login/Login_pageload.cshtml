@model mvcproject_jobsearch.Models.Logincls
@{
    ViewBag.Title = "Login_pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login </h2>
@using (Html.BeginForm("Login_Click", "Login", FormMethod.Post))
{
    <div>
        <label>Username:</label>
    </div>
    <div>
        @Html.TextBoxFor(m => m.uname)
        @Html.ValidationMessageFor(m => m.uname)
    </div>
    <div>
        <label>Password:</label>
    </div>
    <div>
        @Html.PasswordFor(m => m.password)
        @Html.ValidationMessageFor(m => m.password)
    </div>
    <div>
        <input type="submit" value="Login" />
        @Html.DisplayFor(m => m.msg)
    </div>
}
</div>
